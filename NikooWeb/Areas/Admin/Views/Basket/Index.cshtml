@model List<Basket>
@{
    ViewData["Title"] = "Basket Page";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-light text-center">
                <h2>List Of Baskets</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>
                        Total Factor
                    </td>
                    <td>
                        Date
                    </td>
                    <td>
                        Is Paid
                    </td>
                    <td>
                        Actions
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (Basket item in Model)
                {
                    <tr>
                        <td>@item.TotalFactor.ToString("c0")</td>
                        <td>@item.CreateDate</td>
                        <td>@item.IsPaid</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Basket" asp-action="BasketDetails" asp-route-Id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-cart4"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
